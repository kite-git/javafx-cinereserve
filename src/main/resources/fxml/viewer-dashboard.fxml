<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinema.controller.ViewerController">
    <top>
        <VBox spacing="10.0" styleClass="top-panel">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label fx:id="welcomeLabel" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Welcome, Viewer!" />
                  <ImageView fitHeight="44.0" fitWidth="188.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../com/cinema/logo-cinereserve-white.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="280.0" right="280.0" />
                     </HBox.margin>
                  </ImageView>
                  <Button fx:id="aboutButton" alignment="CENTER_RIGHT" onAction="#handleAbout" style="-fx-background-color: TRANSPARENT; -fx-text-fill: white;" text="About Us" />
                        <Button fx:id="logoutButton" alignment="CENTER_RIGHT" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Logout" />
                    </children>
                </HBox>
                <Separator />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>

    <left>
        <VBox prefWidth="300.0" spacing="10.0" styleClass="left-pane">
            <children>
                <Label style="-fx-font-size: 16; -fx-font-weight: bold;" styleClass="heading" text="Available Movies" />
                <ListView fx:id="movieListView" prefHeight="200.0" />

                <Label style="-fx-font-size: 16; -fx-font-weight: bold;" styleClass="heading" text="Movie Details" />
                <TextArea fx:id="movieDetailsArea" editable="false" prefHeight="150.0" wrapText="true" />
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" styleClass="heading" text="Poster View" />
            <HBox alignment="CENTER" prefHeight="107.0" prefWidth="280.0">
               <children>
                  <ImageView fx:id="posterView" fitHeight="162.0" fitWidth="105.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>

                <Label style="-fx-font-size: 16; -fx-font-weight: bold;" styleClass="heading" text="Show Times" />
                <ComboBox fx:id="showTimeCombo" prefWidth="280.0" promptText="Select show time" styleClass="combo-box" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="center-pane">
            <children>
                <Label style="-fx-font-size: 18; -fx-font-weight: bold;" styleClass="main-title" text="Seat Selection" />
                <Label alignment="CENTER" prefHeight="38.0" prefWidth="246.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-padding: 10; -fx-font-size: 14;" styleClass="screen-label" text="Screen" />

                <ScrollPane fitToHeight="true" fitToWidth="true">
                    <content>
                        <GridPane fx:id="seatGrid" alignment="CENTER" />
                    </content>
                </ScrollPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Button disable="true" style="-fx-background-color: lightgreen;" />
                                <Label text="Available" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Button disable="true" style="-fx-background-color: red;" />
                                <Label text="Booked" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Button disable="true" style="-fx-background-color: yellow;" />
                                <Label text="Selected" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10.0" styleClass="bottom-panel">
            <children>
                <Separator />
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="bookButton" disable="true" onAction="#handleBookTicket" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;" text="Book Selected Seat" />
                        <Label fx:id="statusLabel" style="-fx-font-size: 14; -fx-font-weight: bold;" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>
